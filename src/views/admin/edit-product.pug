extends ../layouts/main-layout.pug

block styles
    link(rel='stylesheet', href='/css/forms.css')
    link(rel='stylesheet', href='/css/product.css')

block content
    main
        form.product-form(action=editing ? `/admin/edit-product/${product.id}` : '/admin/add-product', method='POST')
            .form-control
                label(for='title') Title
                input#title(type='text', name='title', value=product ? product.title : '')
                label(for='imageUrl') ImageURL
                input#imageUrl(type='text', name='imageUrl', value=product ? product.imageUrl : '')
                label(for='price') Price
                input#price(type='number', name='price', value=product ? product.price : '')
                label(for='description') Description
                textarea#description(type='text', name='description', rows="5") #{product ? product.description : ''}
                if editing
                    input(type='hidden', name='id', value=product.id)
            button.btn(type='submit') #{ editing ? 'Update Product' : 'Add Product'}
